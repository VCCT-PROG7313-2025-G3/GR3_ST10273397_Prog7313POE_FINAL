<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/budget_root"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_budget_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget Tracking"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_add_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Budget" />

    <Button
        android:id="@+id/btn_budget_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Budget Summary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_budgets"
        android:layout_width="377dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:contentDescription="the list of recorded budgets" />

</LinearLayout>
