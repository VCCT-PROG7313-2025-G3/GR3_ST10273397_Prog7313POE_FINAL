<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MyUserRegistrationActivity">

    <TextView
        android:id="@+id/tv_register_greeting"
        style="@style/ThriftsenseText"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:text="Registration"
        android:textAlignment="center"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/tv_firstname"
        style="@style/ThriftsenseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Name: "
        android:textAlignment="textStart"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/etxt_firstname"
        style="@style/ThriftsenseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_lastname"
        style="@style/ThriftsenseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Name:"
        android:textAlignment="textStart"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/etxt_lastname"
        style="@style/ThriftsenseText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_email"
        style="@style/ThriftsenseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address: "
        android:textAlignment="textStart"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/etxt_email"
        style="@style/ThriftsenseText"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="Email Adress"
        android:inputType="textEmailAddress"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_password"
        style="@style/ThriftsenseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:textAlignment="textStart"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/etxt_password"
        style="@style/ThriftsenseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_confirmpassword"
        style="@style/ThriftsenseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password:"
        android:textAlignment="textStart"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/etxt_confirmpassword"
        style="@style/ThriftsenseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_confirm"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Confirm"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:rippleColor="@color/black" />

    <Button
        android:id="@+id/btn_cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:fontFamily="@font/abril_fatface"
        android:text="@android:string/cancel"
        android:textColor="@color/black"
        android:textSize="20sp" />
</LinearLayout>